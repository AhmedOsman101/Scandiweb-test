{
	"scripts": {
		"build-css": "pnpm exec tailwindcss -i ./public/assets/sass/main.css -o ./public/dist/main.css --watch",
		"build-js": "pnpm exec esbuild ./public/assets/js/main.js --outfile=public/dist/main.js --bundle --watch",
		"serve": "concurrently \"pnpm build-css\" \"pnpm build-js\""
	},
	"dependencies": {
		"alpinejs": "^3.14.1"
	},
	"devDependencies": {
		"@tailwindcss/forms": "^0.5.7",
		"concurrently": "^8.2.2",
		"esbuild": "^0.23.0",
		"tailwindcss": "^3.4.10"
	}
}
